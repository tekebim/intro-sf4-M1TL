{% extends 'base.html.twig' %}

{% block title %} Catégories | Index {% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dissmissible">{{ message }}</div>
    {% endfor %}

    <div class="container">
        <h1>Catégories</h1>

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>Voir</td>
                    <td>Editer</td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
