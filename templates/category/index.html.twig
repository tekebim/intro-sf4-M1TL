{% extends 'base.html.twig' %}

{% block title %} Catégories | Index {% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dissmissible">{{ message }}</div>
    {% endfor %}

    <div class="container">
        <h1>Catégories</h1>

        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Nom</th>
                <th colspan="2">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <form method="post" action="{{ path('category.delete', {id:category.id}) }}" onsubmit="confirm('Etes-vous sûr ? Cette action est irréversible')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete'~category.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                    <td><a href="{{ path('category.edit', {id:category.id}) }}">Editer</a></td>
                </tr>
            {% endfor %}
            </tbody>

        </table>
    </div>
{% endblock %}
