{{ form_start(form) }}
<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_row(form.name) }}
    </div>
    <div class="col-md-6 mb-3">
        {{ form_row(form.category) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_row(form.city) }}
    </div>
    <div class="col-md-6 mb-3">
        {{ form_row(form.address) }}
    </div>
</div>
<div class="row">
    <div class="col-md-6 mb-3">
        {{ form_row(form.capacity) }}
    </div>
    <div class="col-md-6 mb-3">
        {{ form_row(form.floor) }}
    </div>
</div>
{{ form_widget(form) }}
<div class="text-center">
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
</div>
{{ form_end(form) }}
