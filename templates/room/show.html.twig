{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Room detail</h1>

        <div class="shadow p-3 mb-5 bg-white rounded">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ room.category.name }}</td>
                </tr>
                <tr>
                    <th>Capacity</th>
                    <td>{{ room.capacity }}</td>
                </tr>
                <tr>
                    <th>Has projector</th>
                    <td>
                        {% if(room.hasProjector == 1) %}
                            <img src="{{ asset("images/check.svg") }}" width="15" alt="yes">
                        {% else %}
                            <img src="{{ asset("images/close.svg") }}" width="15" alt="no">
                        {% endif %}</td>
                </tr>
                <tr>
                    <th>Has internet</th>
                    <td>
                        {% if(room.hasInternet == 1) %}
                            <img src="{{ asset("images/check.svg") }}" width="15" alt="yes">
                        {% else %}
                            <img src="{{ asset("images/close.svg") }}" width="15" alt="no">
                        {% endif %}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ room.address }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ room.city }}</td>
                </tr>
                <tr>
                    <th>Floor</th>
                    <td>{{ room.floor }}</td>
                </tr>
                <tr>
                    <th>Is available</th>
                    <td>
                        {% if(room.isAvailable == 1) %}
                            <img src="{{ asset("images/check.svg") }}" width="15" alt="yes">
                        {% else %}
                            <img src="{{ asset("images/close.svg") }}" width="15" alt="no">
                        {% endif %}</td>
                </tr>
                <tr>
                    <th>Creator</th>
                    <td>
                        <a href="{{ path('room.byUser', {'id': room.user.id}) }}">{{ room.user.firstname }} {{ room.user.lastname }}</a>
                    </td>
                </tr>
                </tbody>
            </table>
            <div class="text-center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-primary m-3" href="{{ path('room_edit', {'id': room.id}) }}">Edit</a>
                    {{ include('room/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>

        <div class="text-center m-5">
            <a href="{{ path('room_index') }}"><< Back to list</a>
        </div>
    </div>
{% endblock %}
