{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Room detail</h1>

        <div class="shadow p-3 mb-5 bg-white rounded">
            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ room.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ room.name }}</td>
                </tr>
                <tr>
                    <th>Capacity</th>
                    <td>{{ room.capacity }}</td>
                </tr>
                </tbody>
            </table>
            <div class="text-center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a class="btn btn-primary m-3" href="{{ path('room_edit', {'id': room.id}) }}">Edit</a>
                    {{ include('room/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>

        <div class="text-center">
            <a class="m-3" href="{{ path('room_index') }}"><< Back to list</a>
        </div>
    </div>
{% endblock %}
